#include<stdio.h>
int main(){
   int x,i,sum=0;
    printf("Enter your number: \n");
    scanf("%d",&x);
    for(i=1;i<=x/2;i++){
        if(x%i==0){
            sum=sum+i;
        }
    }
    if(sum==x){
        printf("The number is a perfect number\n");
    }
    else{
        printf("The number isnt a perfect number\n");
    }
    return 0;
}
